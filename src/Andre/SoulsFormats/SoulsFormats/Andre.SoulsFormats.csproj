<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Copyright>Copyright Â© Joseph Anderson 2019</Copyright>
    <Description>A .NET library for reading and writing FromSoftware file formats.</Description>
    <Company>JKAnderson</Company>
    <Authors>Joseph Anderson</Authors>
    <PackageProjectUrl>https://github.com/JKAnderson/SoulsFormats</PackageProjectUrl>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <TargetFramework>net9.0</TargetFramework>
    <LangVersion>12</LangVersion>
    <Configurations>Debug;Release;Debug-win;Release-win;Debug-linux;Release-linux;Debug-osx;Release-osx</Configurations>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Debug-win' ">
    <DefineConstants>WINDOWS;DEBUG</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Release-win' ">
    <DefineConstants>WINDOWS;RELEASE</DefineConstants>
    <DebugType>embedded</DebugType>
    <DocumentationFile />
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Debug-linux' ">
    <DefineConstants>LINUX;DEBUG</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Release-linux' ">
    <DefineConstants>LINUX;RELEASE</DefineConstants>
    <DebugType>embedded</DebugType>
    <DocumentationFile />
  </PropertyGroup>
  
  <PropertyGroup Condition=" '$(Configuration)' == 'Debug-osx' ">
    <TargetFramework>$(TargetFramework)-osx</TargetFramework>
    <DefineConstants>OSX;DEBUG</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Release-osx' ">
    <TargetFramework>$(TargetFramework)-osx</TargetFramework>
    <DefineConstants>OSX;RELEASE</DefineConstants>
    <DebugType>embedded</DebugType>
    <DocumentationFile />
  </PropertyGroup>

  <ItemGroup Condition="$(TargetFramework.StartsWith('netstandard'))">
    <PackageReference Include="System.Text.Encoding.CodePages" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="BouncyCastle.Cryptography" Version="2.4.0" />
    <PackageReference Include="CommunityToolkit.HighPerformance" Version="8.2.2" />
    <PackageReference Include="DotNext.IO" Version="4.15.0" />
    <PackageReference Include="DotNext.Unsafe" Version="4.14.0" />
    <PackageReference Include="System.Text.Encoding.CodePages" Version="8.0.0" />
    <PackageReference Include="System.Text.Json" Version="8.0.5" />
    <PackageReference Include="ZstdNet" Version="1.4.5" />
  </ItemGroup>
</Project>
